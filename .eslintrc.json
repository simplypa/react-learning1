{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
        
    ],
    "overrides": [
    ],
    "settings": {
        "import/resolver": {
          "node": {
            "moduleDirectory": ["node_modules", "src/"]
          }
        }
    },
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": [
            "./jsconfig.json"
          ]
    },
    "plugins": [
        "react",
        "node"
    ],
    "rules": {
      "react/function-component-definition": ["error", {
        "namedComponents": "arrow-function",
        "unnamedComponents": "arrow-function"
      }],
      "global-require": "error",
    }
}
